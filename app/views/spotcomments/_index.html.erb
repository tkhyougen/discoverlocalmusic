<ul style="list-style:none">
  <!-- 最新5件だけ表示  -->
  <div class="comment_on_artist">
      <% spotcomments.first(5).each do |spotcomment| %>
        <% if spotcomment.id.present? %>
          <li>
            <div class ="comment-content" id ="this_comment_<%= spotcomment.id %>"></div>
            ユーザー<%= spotcomment.user.name %>のコメント<div class="balloon"><%= spotcomment.content %></div>
            <a><%= link_to "編集", edit_spot_spotcomment_path(spot, spotcomment), remote: true %></a>
            <a><%= link_to "削除", spot_spotcomment_path(spotcomment.spot_id, spotcomment.id), method: :delete, remote: true,
                                            data: { confirm: "本当に削除しますか?"} %></a>
          </li>
        <% end %>
      <% end %>
  </div>
</ul>
