<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: user_registration_path, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <!-- #画像を編集する -->
  <div class="field>
    <p><%= f.label :写真 %></p>
    <% if @user.image.url %>
      <%= image_tag @user.image.url(:thumb), id: :image_preview %>
    <% else %>

    <% end %>
    <%= f.file_field :image, id: :user_image %>
    <script>
      $(function(){
      function readURL(input){
        if(input.files && input.files[0]){
          var reader = new FileReader();
          reader.onload = function (e) {
            $('#image_preview').attr('src', e.target.result);
          }
          reader.readAsDataURL(input.files[0]);
        }
      }
      $('#user_image').change(function(){
        readURL(this);
        });
      });
    </script>
    <p><%= f.check_box :remove_image %>画像を削除</p>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, autofocus: true %>
  </div>

  <!-- #taggableにて追加 -->

  <div class="field", id="tag_list1">
    <%= f.label :country_list %><br />
    <%= f.text_field :country_list, value: @user.country_list.join(","), class:"form-control"  %>
  </div>

    <!-- #taggableにて追加 -->
  <div class="field">
    <%= f.label :artist_list %><br />
    <ul id ="tag_list2">
      <li>
        <%= f.text_field :artist_list, value: @user.artist_list.join(","), class:"form-control"  %>
      </li>
    </ul>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>

<h3><%= t('.cancel_my_account') %></h3>

<p><%= t('.unhappy') %> <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %></p>

<%= link_to t('devise.shared.links.back'), :back %>

