<div class="mypagetitle">
  <p><%= t("message.confirm") %></p>
</div>

<%= form_with(model: @spot, local: true ) do |form| %>

  <div class ="container_profile">
    <div class="user_profile_upper">
      <div class="user_profile_upper_left">
        <div class="user_profile_image">
          <p><%= form.label :image %></p>
            <% if @spot.image && @spot.image.url %>
              <%= image_tag @spot.image.url,:size =>'350x350' %>
              <%= form.hidden_field :image_cache %>
            <% else %>
              <%= image_tag 'spoticon.png',:size =>'350x350' %>
              <%= form.hidden_field :image_cache %>
            <% end %>
        </div>
      </div>

      <div class="user_profile_upper_right">
        <div class="user_name">
          <%= form.hidden_field :name %>
          <p class="profile_data"><%= t("spot.name") %></p>
          <p><%= @spot.name %> </p>
        </div>

        <div class="user_email">
          <%= form.hidden_field :country %>
          <p class="profile_data"><%= t("spot.country") %></p>
          <p><%= @spot.country %> </p>
        </div>

        <div class="spot_place">
          <%= form.hidden_field :genre %>
          <p class="profile_data"><%= t("spot.genre") %></p>
          <p><%= @spot.genre %></p>
        </div>

        <div class="user_comment">
          <%= form.hidden_field :post_comment %>
          <p class="profile_data"><%= t("spot.comment") %></p>
          <p><%= @spot.post_comment %></p>
        </div>
      </div>
    </div>
    <br /><br /><br /><br /><br /><br />

    <div class ="spot_address_lower">
      <%= form.hidden_field :address %>
      <p class="profile_data">住所</p>
      <p><%= @spot.address %></p>
    </div>

    <div class ="user_profile_lower_button_edit">
      <div class="update_field">
        <p><%= form.submit t("submit"),class:"btn btn-primary btn-block btn-lg" %></p>
        <p><%= form.submit t("back"), name:"back"%></p>
      </div>
    </div>
  </div>
<% end %>
